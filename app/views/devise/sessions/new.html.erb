		<div class="main-login col-sm-4 col-sm-offset-4">
			<div class="logo">ProjectN
			</div>
			<!-- start: LOGIN BOX -->
			<div class="box-login">
				<h3>Sign in to your account</h3>
				<p>
					Please enter your e-mail and password to sign in.
				</p>
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => "form-login") do |f| %>
       <div class="form-group">
         <span class="input-icon">
          <%= f.email_field :email, :class=>"form-control", :placeholder => "Email", :autofocus => true %>
         <i class="fa fa-user"></i> </span>
						</div>
        <div class="form-group form-actions">
				<span class="input-icon">
          <%= f.password_field :password,:class=>"form-control", :placeholder => "Password" %>
        <i class="fa fa-lock"></i>
								<a class="forgot" href="#">
									I forgot my password
								</a> </span>
						</div>
        <div class="form-actions">
        <% if devise_mapping.rememberable? -%>
        <%= f.check_box :remember_me, :class => "grey remember" %> <%= f.label "Keep me signed In", :class => "checkbox-inline" %>
        <% end -%>

      <%= f.submit "Sign in",:class=>"btn btn-bricky pull-right" %>
      <% end %>
      </div>
      <%= render "devise/shared/links" %>
			</div>
  </div>
